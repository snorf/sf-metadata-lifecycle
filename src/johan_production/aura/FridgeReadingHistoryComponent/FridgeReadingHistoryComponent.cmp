<aura:component description="FridgeReadingHistoryComponent" implements="force:appHostable,flexipage:availableForAllPageTypes" access="global"  controller="FridgeReadingHistoryController">
    <ltng:require scripts="{!$Resource.chartjs_270}" />
    <aura:handler name="init" value="{!this}" action="{!c.doinit}"/>
    <div class="container">
        <div class="chart-demo">
            <h2 class="title">Fridge History</h2>
            <div>
                <canvas id="temperature" style="display: block; height: 480px; width: 640px;" width="640" height="480" class="chartjs-render-monitor"></canvas>
            </div>
            <div>
                <canvas id="humidity" style="display: block; height: 480px; width: 640px;" width="640" height="480" class="chartjs-render-monitor"></canvas>
            </div>
            <div>
                <canvas id="door" style="display: block; height: 480px; width: 640px;" width="640" height="480" class="chartjs-render-monitor"></canvas>
            </div>
        </div>
    </div>
</aura:component>